<ul class="mainMenu">
<%= render 'layouts/admin/cms/menu', current: :content -%>
</ul>

<ul class="contentMenu">
<%= content_tag('li') { link_to "記事一覧", gp_article_docs_path(content: @content), class: current == :doc ? 'current' : '' } -%>
<%= content_tag('li') { link_to "記事集計", gp_article_aggregation_groups_path(content: @content), class: current == :aggregation ? 'current' : '' } -%>
<%= content_tag('li') { link_to "記事設定", gp_article_content_settings_path, class: current == :setting ? 'current' : '' } if @content.editable? -%>
</ul>
