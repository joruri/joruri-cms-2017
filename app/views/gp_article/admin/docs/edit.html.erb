<%= render 'gp_article/admin/docs/shared/replacement_notification' %>

<%= form_for @item, as: :item, url: { action: :update }, html: { method: :put } do |f| %>
  <%= error_messages_for :item %>
  <%= render 'gp_article/admin/docs/shared/link_check_result', f: f, results: @item.link_check_results %>
  <%= render 'gp_article/admin/docs/shared/accessibility_check_result', f: f, results: @item.accessibility_check_results %>
  <%= render 'gp_article/admin/docs/shared/words_with_dictionary_check_result', f: f, results: @item.words_with_dictionary_check_results %>
  <%= render 'form', f: f %>
  <%= submit @content.doc_state_options(Core.user) %>
<% end %>
