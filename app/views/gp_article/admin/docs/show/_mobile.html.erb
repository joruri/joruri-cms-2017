<table class="show">
  <tr>
    <th><%= @item.locale :mobile_title %></th>
    <td><%= @item.mobile_title %></td>
  </tr>
  <tr>
    <th colspan="2"><%= @item.locale :mobile_body %></th>
  </tr>
  <tr>
    <td colspan="2" class="cke_editor_wrapper">
      <%= text_area_tag :mobile_body, @item.mobile_body.gsub('"file_contents/', %Q("#{gp_article_doc_path(@content, id: @item.id)}/file_contents/)), class: 'ckeditor' %>
    </td>
  </tr>
  <%- if (links = @item.links.where(linkable_column: 'mobile_body')).present? -%>
  <tr>
    <th><%= @item.locale :mobile_body %>に含まれるリンク</th>
    <td>
      <ul>
        <%- links.each do |link| -%>
        <li><%= link.body %> (<%= link_to link.url, link.url, target: 'preview' %>)</li>
        <%- end -%>
      </ul>
    </td>
  </tr>
  <%- end -%>
</table>
