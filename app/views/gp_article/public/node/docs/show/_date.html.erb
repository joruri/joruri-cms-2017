<%- if content.serial_no_enabled? -%>
<div class="docNo"><p><%= content.serial_no_title %>&nbsp;<%= item.serial_no %></p></div>
<%- end -%>
<%- if content.display_dates(:published_at) || content.display_dates(:updated_at) -%>
<div class="date">
  <%- if content.display_dates(:published_at) -%>
  <p class="publishedAt">公開日 <%= item.display_published_at.strftime(@content.date_style) if item.display_published_at %></p>
  <%- end -%>
  <%- if content.display_dates(:updated_at) -%>
  <p class="updatedAt">更新日 <%= item.display_updated_at.strftime(@content.date_style) if item.display_updated_at %></p>
  <%- end -%>
</div>
<%- end -%>
