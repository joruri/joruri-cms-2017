<div class="contentGpArticleDocs">
  <%- if @content.feed_display? -%>
  <ul class="feed">
    <li><%= link_to 'RSS' , "index.rss" , :class => 'feedRss', :title => 'RSSフィードを取得' %></li>
    <li><%= link_to 'Atom', "index.atom", :class => 'feedAtom', :title => 'Atomフィードを取得' %></li>
  </ul>
  <%- end -%>
  <div class="docs">
    <%- if @docs.present? && !@content.simple_pagination? -%>
      <h2 class="date">
        <%= monthly_page_title(@docs.paginator.date_range, @content.doc_monthly_title_style) if @content.monthly_pagination? %>
        <%= weekly_page_title(@docs.paginator.date_range, @content.doc_weekly_title_style) if @content.weekly_pagination? %>
      </h2>
    <%- end -%>
    <%- if @content.doc_list_style == 'by_date' && @content.simple_pagination? %>
      <%- @items.each do |date, docs| -%>
        <h2 class="date"><%= date %></h2>
        <%= content_wrapper_tag @content.wrapper_tag do %>
          <%- docs.each do |doc| -%>
            <%= content_tag @content.wrapper_tag, doc_replace(doc, @content.list_style, @content.date_style, @content.time_style) %>
          <%- end -%>
        <%- end -%>
      <%- end -%>
    <%- else -%>
      <%= content_wrapper_tag @content.wrapper_tag do %>
        <%- @docs.each do |doc| -%>
          <%= content_tag @content.wrapper_tag, doc_replace(doc, @content.list_style, @content.date_style, @content.time_style) %>
        <%- end -%>
      <%- end -%>
    <%- end -%>
  </div>
  <%- if @content.simple_pagination? -%>
    <%= paginate @docs, previous_label: @content.prev_label, next_label: @content.next_label %>
  <%- else -%>
    <%= date_paginate @docs, previous_label: @content.prev_label, next_label: @content.next_label %>
  <%- end -%>
</div>
