<%- if @piece.upper_text.present? -%>
<div class="upper_text"><%=raw @piece.upper_text %></div>
<%- end -%>

<%- unless request.mobile? -%>
<iframe title=<%= @form.title %> src="<%= "#{@form.public_uri}" %>?inlining=true&piece=<%= @piece.id %>&t=<%=CGI.escape Page.title %>&u=<%=CGI.escape Page.uri %>" style="width: 100%; height: 100%;" class="survey"></iframe>
<%= javascript_tag do -%>
$(document).ready(function () {
  $('iframe.survey').iframeAutoHeight();
});
<%- end -%>
<%- else -%>
回答ページは<%= link_to 'こちら', "#{@form.public_uri}" %>です。
<%- end -%>

<%- if @piece.lower_text.present? -%>
<div class="lower_text"><%=raw @piece.lower_text %></div>
<%- end -%>
