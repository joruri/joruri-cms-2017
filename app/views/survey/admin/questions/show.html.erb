<%= init_ckeditor readOnly: true %>
<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.state_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :description %></th>
    <td class="cke_editor_wrapper"><%= text_area_tag :description, @item.description, class: 'ckeditor' %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :form_type %></th>
    <td><%= @item.form_type_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :form_text_max_length %><br />（種別が入力の時に使用）</th>
    <td><%= @item.form_text_max_length %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :form_options %><br />（種別が選択の時に使用）</th>
    <td><%=simple_format @item.form_options %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :form_file_max_size %><br />（種別が添付の時に使用）</th>
    <td><%= "#{@item.form_file_max_size} MB" if @item.form_file_max_size %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :form_file_extension %><br />（種別が添付の時に使用）</th>
    <td><%= @item.form_file_extension %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :required %></th>
    <td><%= @item.required_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :style_attribute %></th>
    <td><%= @item.style_attribute %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :sort_no %></th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>
