<%= page_entries_info @items %>

<table class="index">
  <tr>
    <th class="action_link">詳細</th>
    <th style="width: 50px; text-align: right;">ID</th>
    <th style="width: 20%;"><%= Cms::Site.human_attribute_name :name %></th>
    <th style="width: ;"><%= Cms::Site.human_attribute_name :full_uri %></th>
    <th style="width: ;"><%= Cms::Site.human_attribute_name :admin_full_uri %></th>
    <th style="width: 60px; text-align: center;"><%= Cms::Site.human_attribute_name :state %></th>
    <th style="width: 80px; text-align: center;">アクセス制御</th>
  </tr>
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td style="text-align: right;"><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.full_uri %></td>
    <td><%= item.admin_full_uri %></td>
    <td style="text-align: center;"><%= item.state_text %></td>
    <td style="text-align: center;"><%= link_to '設定', cms_site_access_controls_path(item) %></td>
  </tr>
  <% end %>
</table>

<%= paginate @items %>
