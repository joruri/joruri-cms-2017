<div class="actionMenu">
<%= link_to 'ファイル', cms_data_files_path, class: 'current'%>
<%= link_to 'フォルダ', cms_data_file_nodes_path %>
<span class="separator"></span>
<%= action_menu :new if Core.user.has_priv?(:create, item: Core.concept) %>
<%= action_menu :index %>
<%= action_menu :show %>
<%= action_menu :edit      if @item && @item.editable? %>
<% if params[:action] == 'show' %>
<%= link_to(:publish, { do: :publish }, confirm: '公開してよろしいですか？') if @item && @item.publishable? %>
<%= link_to(:close, { do: :close }, confirm: '公開を終了してよろしいですか？') if @item && @item.closable? %>
<% end %>
<%= action_menu :destroy   if @item && @item.deletable? %>
</div>
