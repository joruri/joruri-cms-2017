<%= page_entries_info @items %>

<table class="index">
  <tr>
    <th class="action_link">詳細</th>
    <th style="width: 30%;"><%= Cms::Layout.human_attribute_name :name %></th>
    <th style="width: ;"><%= Cms::Layout.human_attribute_name :title %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
  </tr>
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td><%= item.name %></td>
    <td><%= item.title %></td>
    <td style="text-align: center;"><%=l item.updated_at %></td>
  </tr>
  <% end %>
</table>

<%= paginate @items %>
