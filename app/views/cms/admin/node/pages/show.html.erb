<%= init_ckeditor readOnly: true %>

<% if rep = @item.replaced_page %>
<div class="noticeBox">更新用のページが作成されています ： <%= link_to h(rep.title), rep.admin_uri %></div>
<% elsif org = @item.replace_page %>
<div class="noticeBox">更新されるページ ： <%= link_to h(org.title), org.admin_uri %></div>
<% end %>

<p class="form">基本情報</p>

<table class="show">
  <%= node_base_view @item, container: :tr %>
</table>

<table class="show" style="margin: 0px;">
  <tr>
    <th><%= @item.class.human_attribute_name :body %></th></tr><tr>
    <td class="cke_editor_wrapper"><%= text_area_tag :viewBody, @item.body, class: 'ckeditor' %></td>
  </tr>
</table>

<%- if @item.site.use_mobile_feature? -%>
<br /><p class="form">携帯向け</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :mobile_title %></th>
    <td><%=hbr @item.mobile_title %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :mobile_body %></th>
    <td><%=hbr @item.mobile_body %></td>
  </tr>
</table>
<%- end -%>

<br /><p class="form">連絡先設定</p>
<%= render 'cms/admin/_partial/inquiries/view', item: @item %>
<%= task_view @item %>
<%= recognizer_view @item %>
<%= creator_view @item %>
