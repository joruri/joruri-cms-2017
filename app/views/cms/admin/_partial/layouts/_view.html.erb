<% if defined?(container) && container != :tr %>
<table class="show">
<% end %>
  <tr>
    <th>レイアウト</th>
    <td>
      <% if @item.layout %>
        <%= @item.layout.title %>
      <% elsif defined?(@item.inherited_layout) && @item.inherited_layout %>
        （<%= @item.inherited_layout.title %>）
      <% end %>
    </td>
  </tr>
  <%- if defined?(more) && more -%>
  <tr>
    <th>一覧レイアウト</th>
    <td><%= @item.more_layout.try(:title) %></td>
  </tr>
  <%- end -%>
<% if defined?(container) && container != :tr %>
</table>
<% end %>
