<table class="index">
  
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: ;"><%= Cms::PieceLinkItem.human_attribute_name(:name) %></th>
    <th style="width: 40%;"><%= Cms::PieceLinkItem.human_attribute_name(:uri) %></th>
    <th style="width: 80px; text-align: right;"><%= Cms::PieceLinkItem.human_attribute_name(:sort_no) %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;"><%= Cms::PieceLinkItem.human_attribute_name(:state) %></th>
  </tr>
  
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, url_for(action: :show, id: item.id) %></td>
    <td><%= item.name %></td>
    <td><%= item.uri %></td>
    <td style="text-align: right;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%=l item.updated_at %></td>
    <td style="text-align: center;"><%= item.state_text %></td>
  </tr>
  <% end %>

</table>

<%#= paginate @items %>
