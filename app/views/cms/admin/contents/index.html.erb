<%= page_entries_info @items %>

<table class="index" style="table-layout: fixed;">
  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: auto;"><%= Cms::Content.new.locale(:name) %></th>
    <th style="width: auto;"><%= Cms::Content.human_attribute_name :note %></th>
    <th style="width: 150px;">コンテンツ種別</th>
    <th style="width: 60px;"><%= Cms::Content.human_attribute_name :sort_no %></th>
    <th style="width: 120px; text-align: center;">更新日時</th>
  </tr>
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, item.admin_content_uri %></td>
    <td><%= link_to h(item.name), item.admin_uri %></td>
    <td><%= item.note %></td>
    <td><%= item.module_name(:short) %></td>
    <td><%= item.sort_no %></td>
    <td style="text-align: center;"><%= item.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
