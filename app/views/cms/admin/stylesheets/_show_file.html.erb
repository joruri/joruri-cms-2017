<table class="show">
  <tr>
    <th>ファイル名</th>
    <td><%= @item.name %> （<%= link_to "ダウンロード", "?do=download" %>）</td>
  </tr><tr>
    <th>ファイル種別</th>
    <td><%= @item.mime_type %></td>
  </tr><tr>
    <th>サイズ</th>
    <td><%= @item.kb_size %> KB</td>
  </tr><tr>
    <th>更新日時</th>
    <td><%=l @item.mtime %></td>
  </tr>
</table>

<%- if @item.text_file? -%>
<table class="show">
  <tr>
    <th>内容</th>
  </tr>
  <tr>
    <td class="pre monospace"><%= @item.body %></td>
  </tr>
</table>
<%- end -%>
