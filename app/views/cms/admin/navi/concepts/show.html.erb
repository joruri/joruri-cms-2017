<h2>コンセプト <%= "： #{h(@item.name)}" if @item %></h2>

  <table class="index" style="width: 800px;">
  <tr>
    <th><%= Cms::Content.human_attribute_name :name %></th>
  </tr>
  <% @item.contents.order(:sort_no, :name, :id).each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= link_to h(item.name), item.admin_uri %></td>
  </tr>
  <% end %>
  <% if @item.contents.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>

  <br />

<% if Core.user.has_auth?(:designer) %>
  
  <table class="index" style="width: 800px;">
  <tr>
    <th style="width: 240px;"><%= Cms::Layout.human_attribute_name :name %></th>
    <th><%= Cms::Layout.human_attribute_name :title %></th>
  </tr>
  <% @item.layouts.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= link_to h(item.name), cms_layout_path(item) %></td>
    <td><%= item.title %></td>
  </tr>
  <% end %>
  <% if @item.layouts.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>
  
  <br />
  
  <table class="index" style="width: 800px;">
  <tr>
    <th style="width: 240px;"><%= Cms::Piece.human_attribute_name :name %></th>
    <th><%= Cms::Piece.human_attribute_name :title %></th>
  </tr>
  <% @item.pieces.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= link_to h(item.name), item.admin_uri %></td>
    <td><%= item.title %></td>
  </tr>
  <% end %>
  <% if @item.pieces.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>
  
<% end %>
