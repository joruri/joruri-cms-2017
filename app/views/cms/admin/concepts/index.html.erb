<div class="crudTree">
<div class="tree">
  
  <p>
    <%= link_to :show, { action: :show, parent: @parent.parent_id, id: @parent } if @parent.id != 0 %>
    <%= @parent.name %></p>
  
  <div class="links">
    <div>
      <%= link_to :up, { action: :index, parent: @parent.parent_id } if @parent.id != 0 %></div>
    
    <% @items.each do |item| %>
    <%= link_to :show, { action: :show, id: item } %>
    <%= link_to item.name, { action: :index, parent: item } %>
    <span class="remark"><%= item.sort_no %></span><br />
    <% end %>
  </div>
  
</div>
<div class="content">

  <table class="index">
  <tr>
    <th><%= Cms::Content.human_attribute_name(:name) %></th>
  </tr>
  <% @parent.contents.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= item.name %></td>
  </tr>
  <% end %>
  <% if @parent.contents.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>

  <br />
  
  <table class="index">
  <tr>
    <th style="width: 240px;"><%= Cms::Layout.human_attribute_name(:name) %></th>
    <th><%= Cms::Layout.human_attribute_name(:title) %></th>
  </tr>
  <% @parent.layouts.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= item.name %></td>
    <td><%= item.title %></td>
  </tr>
  <% end %>
  <% if @parent.layouts.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>
  
  <br />
  
  <table class="index">
  <tr>
    <th style="width: 240px;"><%= Cms::Piece.human_attribute_name(:name) %></th>
    <th><%= Cms::Piece.human_attribute_name(:title) %></th>
  </tr>
  <% @parent.pieces.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= item.name %></td>
    <td><%= item.title %></td>
  </tr>
  <% end %>
  <% if @parent.pieces.size == 0 %><tr><td colspan="2"><br /></td></tr><% end %>
  </table>

</div>
<div class="footer"></div>
</div>
