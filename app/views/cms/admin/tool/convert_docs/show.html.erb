<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :uri_path %></th>
    <td><%= @item.uri_path %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :file_path %></th>
    <td><%= @item.file_path %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :doc_content %></th>
    <td><%= link_to @item.content.try(:name), gp_article_docs_path(content: @item.content) if @item.content %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :doc_name %></th>
    <td><%= link_to @item.latest_doc.name, gp_article_doc_path(content: @item.latest_doc.content, id: @item.latest_doc.id) if @item.latest_doc %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :doc_public_uri %></th>
    <td><%= link_to @item.doc_public_uri, @item.doc_public_uri %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :updated_at %></th>
    <td><%=l @item.updated_at %></td>
  </tr>
</table>

<p class="form">ページ情報</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :body %></th>
    <td><%=raw @item.body %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :page_updated_at %></th>
    <td><%= @item.page_updated_at %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :page_published_at %></th>
    <td><%= @item.page_published_at %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :page_group_code %></th>
    <td><%= @item.page_group_code %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :page_category_names %></th>
    <td><%= @item.page_category_names %></td>
  </tr>
</table>
