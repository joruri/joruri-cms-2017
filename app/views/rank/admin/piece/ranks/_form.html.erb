<%= render 'shared/admin/piece/form', f: f do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= f.label :ranking_target %></th>
    <td><%= f.array_radio_buttons 'in_settings[ranking_target]', @item.ranking_targets %></td>
  </tr>
  <tr>
    <th><%= f.label :ranking_term %></th>
    <td><%= f.array_select 'in_settings[ranking_term]', @item.ranking_terms, include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :display_count %></th>
    <td><%= f.array_text_field 'in_settings[display_count]', class: 'number' %></td>
  </tr>
  <tr>
    <th><%= f.label :show_count %></th>
    <td><%= f.array_select 'in_settings[show_count]', @item.show_counts, include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :more_link_body %></th>
    <td><%= f.array_text_field 'in_settings[more_link_body]', class: 'name' %></td>
  </tr>
  <tr>
    <th><%= f.label :more_link_url %></th>
    <td><%= f.array_text_field 'in_settings[more_link_url]', class: 'name' %></td>
  </tr>
  <tr>
    <th><%= f.label :category_option %></th>
    <td><%= f.array_radio_buttons 'in_settings[category_option]', @item.category_options %></td>
  </tr>
</table>
<%- end -%>
