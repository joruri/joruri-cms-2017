<span class="note">※は必須項目です。</span>

<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.collection_radio_buttons :state, @item.class.state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :to %></th>
    <td>
      <%= f.text_field :to, class: 'title' %>
      <%= f.check_box :include_cc %><%= f.label :include_cc, 'CCを含む' %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :subject %></th>
    <td><%= f.text_field :subject, class: 'title' %></td>
  </tr>
  <tr>
    <th><%= f.label :logic %></th>
    <td><%= f.collection_radio_buttons :logic, @item.class.logic_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :dest_content_id %> <span class="note">※</span></th>
    <td><%= f.select :dest_content_id, options_from_collection_for_select(@content.gp_article_contents, :id, :name, @item.dest_content_id), include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :default_user_id %></th>
    <td><%= f.select :default_user_id, options_for_select(Core.site.users_for_option, @item.default_user_id), include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :sort_no %></th>
    <td><%= f.text_field :sort_no, class: 'number' %></td>
  </tr>
</table>

<%= creator_form f %>
