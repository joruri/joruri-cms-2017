<div class="contentReceptionApplicant">
  <%= render 'reception/public/node/shared/show_courses', courses: [@course] %>

  <h3>お申込みフォーム</h3>
  <div class="body"><%=raw replace_file_path(@course.description, base: @course.public_uri) %></div>

  <%= form_for @applicant, as: :item, url: "#{@course.public_uri}applicants/" do |f| -%>
    <%= f.error_messages %>
    <%= render 'form', f: f %>
    <div class="submit">
      <%= f.submit '確認画面へ', name: 'confirm' %>
    </div>
  <%- end -%>
</div>
