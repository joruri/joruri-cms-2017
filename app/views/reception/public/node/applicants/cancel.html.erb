<div class="contentReceptionApplicant">
  <h2><%= @course.title %></h2>
  <h3>講座のキャンセルはこちら</h3>

  <%= form_for @token, as: :item, url: "#{@course.public_uri}applicants/#{@token.token}/cancel", html: { method: :patch } do |f| -%>
    <%= f.error_messages %>
    <p>キャンセルする受付番号を入力してください。</p>
    <%= text_field_tag :seq_no %>
    <div class="submit">
      <%= f.submit '確認する', name: 'confirm' %>
    </div>
  <%- end -%>
</div>
