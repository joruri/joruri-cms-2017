<%= page_entries_info @items %>

<table class="index">
  <tr>
    <th style="text-align: center; width: 60px;">詳細</th>
    <th><%= Reception::Open.human_attribute_name :title %></th>
    <th style="text-align: center; width: 120px;"><%= Reception::Open.human_attribute_name :open_on %></th>
    <th style="text-align: center; width: 120px;"><%= Reception::Open.human_attribute_name :expired_at %></th>
    <th style="text-align: center; width: 60px;"><%= Reception::Open.human_attribute_name :applicants_count %></th>
    <th style="text-align: center; width: 120px;"><%= Reception::Open.human_attribute_name :created_at %></th>
    <th style="text-align: center; width: 80px;"><%= Reception::Open.human_attribute_name :state %></th>
  </tr>
  <%- @items.each do |item| -%>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, { action: :show, id: item.id } %></td>
    <td style="text-align: left;"><%= item.title %></td>
    <td style="text-align: center;"><%=i18n_l item.open_on %></td>
    <td style="text-align: center;"><%=i18n_l item.expired_at %></td>
    <td style="text-align: center;"><%= link_to item.applicants.size, reception_course_open_applicants_path(content: @content, course_id: item.course_id, open_id: item.id) %></td>
    <td style="text-align: center;"><%=i18n_l item.created_at %></td>
    <td style="text-align: center;"><%= item.state_text %></td>
  </tr>
  <%- end -%>
</table>

<%= paginate @items -%>
