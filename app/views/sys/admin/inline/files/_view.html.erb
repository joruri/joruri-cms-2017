<table class="index">
  <tr>
    <th style="width: 60px; text-align: center;">番号</th>
    <th style="width: 90px; text-align: center;">サムネイル</th>
    <th>添付ファイル名</th>
    <th style="width: 120px; text-align: center;">サイズ（幅x高さ）</th>
  </tr>
  <%- items.each do |item| -%>
    <%-
      download_path = download_sys_inline_file_path(parent: parent, content: content, id: item)
    -%>
    <tr>
      <td style="text-align: center;"><%= item.id %></td>
      <td style="text-align: center;">
        <%- if item.image_file? -%>
          <%= link_to download_path, class: 'thumbnail', title: item.title, target: '_blank' do %>
            <%= image_tag download_path, style: thumbnail_style(item.image_width, item.image_height, 80, 40) %>
          <%- end -%>
        <%- else -%>
          <%= link_to 'File', download_path, class: item.css_class, target: '_blank' %>
        <%- end -%>
      </td>
      <td>
        <span class="item_name"><%= item.name %></span>
        <span class="item_title"><%= "（#{item.title}）" if item.title.present? %></span>
      </td>
      <td style="text-align: center;"><%= item.eng_unit %><br /><%= item.image_size if item.image_file? %></td>
    </tr>
  <% end %>
</table>
