<%= render 'menu' %>

<table class="show">
  <tr>
    <th>ファイル名（保存用）</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th>ファイル名（表示用）</th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th>ファイル名（代替テキスト用）</th>
    <td><%= @item.alt_text %></td>
  </tr>
  <tr>
    <th>アップロード日時</th>
    <td><%= @item.created_at.try(:strftime, '%Y-%m-%d %H:%M') %></td>
  </tr>
  <tr>
    <th>ファイルサイズ</th>
    <td><%= @item.eng_unit %><br /><%= @item.image_size if @item.image_file? %></td>
  </tr>
  <tr>
    <th>ファイル種別</th>
    <td><%= @item.mime_type %></td>
  </tr>
</table>
