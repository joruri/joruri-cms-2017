<%= form_tag url_for(action: :index), method: :get, class: 'search' do -%>
<table>
  <tr>
    <th><%= Sys::RoleName.human_attribute_name :name %>・<%= Sys::RoleName.human_attribute_name :title %></th>
    <td><%= text_field_tag :s_keyword, params[:s_keyword], style: 'width: 250px;' %></td>
    <td class="submitters">
      <%= submit_tag '検索', name: :search %>
      <%= submit_tag 'リセット', name: :reset %>
    </td>
  </tr>
</table>
