<table class="index">
  
  <tr>
    <th class="action_link">詳細</th>
    <th style="width: 40%;">コンセプト</th>
    <th style="width: ;">権限</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
  </tr>
  
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td><%= item.concept.name if item.concept %></td>
    <td><%= item.action_names.join('，').force_encoding('utf-8') %></td>
    <td style="text-align: center;"><%=l item.updated_at %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
