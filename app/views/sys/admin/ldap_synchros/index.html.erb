<table class="index" style="width: 610px;">
  
  <tr>
    <th class="action_link">詳細</th>
    <th style="width:; text-align: center;">バージョン</th>
    <th style="width: 120px; text-align: right;">グループ数</th>
    <th style="width: 120px; text-align: right;">ユーザー数</th>
    <th style="width: 120px; text-align: center;">作成日時</th>
  </tr>
  
  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item.version } %></td>
    <td style="text-align: center;"><%= item.version%></td>
    <td style="text-align: right;"><%=number_with_delimiter item.group_count %></td>
    <td style="text-align: right;"><%=number_with_delimiter item.user_count %></td>
    <td style="text-align: center;"><%=l item.created_at %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
