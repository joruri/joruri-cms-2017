<div class="crudTree">
<div class="tree">
  <p>
    <%= @parent ? @parent.ou : 'LDAP' %></p>
  
  <div class="links">
      <% @groups.each do |g| %>
      <%= link_to h(g.ou), { action: :index, parent: g.ou } %><br />
      <% end %>
      <%= 'no groups' if @groups.size == 0 %>
  </div>
</div>
<div class="content">
  <table class="index">
    <tr><th>Users</th></tr>
    <% @users.each do |u| %>
    <tr><td><%= u.name %> (<%= u.uid %>)</td></tr>
    <% end %>
    <% if @users.size == 0 %><tr><td>no users<br /></td></tr><% end %>
  </table>
</div>
<div class="footer"></div>
</div>
