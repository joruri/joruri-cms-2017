<span class="note">※は必須項目です。</span>

<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.collection_radio_buttons :state, @item.class.state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :title %> <span class="note">※</span></th>
    <td><%= f.text_field :title %></td>
  </tr>
  <tr>
    <th><%= f.label :date %></th>
    <td><%= f.text_field :date, value: l(@item.date), style: 'width: 150px;', class: 'datepicker' %>
        <%= f.check_box :repeat %> <%= f.label :repeat %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :description %></th>
    <td><%= f.text_field :description, style: 'width: 700px;' %></td>
  </tr>
</table>

<%= creator_form f %>

<script>
$(function() {
  $('input.datepicker').datepicker();
  datepicker('<%= 'yy年' unless @item.repeat %>');

  $('#item_repeat').on('change', function() {
    var checked = $(this).is(':checked');
    if (checked) {
      yy = '';
    } else {
      yy = 'yy年';
    }
    datepicker(yy);
  });

  function datepicker(yy){
    $('input.datepicker').datepicker('option', 'dateFormat', yy + 'mm月dd日');
  }
});
</script>
