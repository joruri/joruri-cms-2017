<%= render 'shared/admin/piece/form', f: f do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th>表示カテゴリ</th>
    <td>
      <%- categories = @item.categories.presence || [nil] -%>
      <%= render 'gp_calendar/admin/shared/categories', categories: categories %>
    </td>
  </tr>
  <tr>
    <th>リンク先</th>
    <td>
      <%= select_tag :target_node, options_for_select(
                                     @item.content.public_nodes.where(model: 'GpCalendar::SearchEvent').map { |n| ["#{n.title}（#{n.name}）", n.id] },
                                     @item.target_node.try(:id)
                                   ), include_blank: true %>
    </td>
  </tr>
</table>
<%- end -%>
