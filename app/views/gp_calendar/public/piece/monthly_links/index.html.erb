<%- unless @links.empty? -%>
<ul>
  <%- @links.each do |year| -%>
  <li>
    <%= link_to_if @piece.target_node.model == 'GpCalendar::Event', year[:name], year[:uri], class: year[:class] %>
    <ul>
      <%- year[:months].each do |month| -%>
      <li><%= link_to month[:name], month[:uri], class: month[:class] %></li>
      <%- end -%>
    </ul>
  </li>
  <%- end -%>
</ul>
<%- end -%>
