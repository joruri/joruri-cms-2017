<%= render 'shared/admin/piece/form', f: f do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= f.label :place_id %></th>
    <td><%= f.array_select 'in_settings[place_id]', @item.content.public_places.map{|p| [p.title, p.id]}, include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :month_number %></th>
    <td><%= f.array_text_field 'in_settings[month_number]', size: 25 %></td>
  </tr>
  <tr>
    <th><%= f.label :holiday_type_state %></th>
    <td><%= f.array_radio_buttons 'in_settings[holiday_type_state]', @item.class::HOLIDAY_TYPE_STATE_OPTIONS %></td>
  </tr>
  <tr>
    <th><%= f.label :holiday_state %></th>
    <td><%= f.array_radio_buttons 'in_settings[holiday_state]', @item.class::HOLIDAY_STATE_OPTIONS %></td>
  </tr>
  <tr>
    <th><%= f.label :date_style %></th>
    <td><%= f.array_text_field 'in_settings[date_style]', size: 25 %> <%= I18n.t('comments.date_style').html_safe %></td>
  </tr>
</table>

<p class="form">挿入テキスト</p>

<table class="show">
  <tr>
    <th><%= f.label :lower_text %></th>
  <tr>
  </tr>
    <td><%= f.array_text_area 'in_settings[lower_text]', size: '100x10' %></td>
  </tr>
</table>



<%- end -%>
