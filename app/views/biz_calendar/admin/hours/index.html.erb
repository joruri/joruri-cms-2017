<%= page_entries_info @items -%>

<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: ; text-align: center;">対象日</th>
    <th style="width: 200px; text-align: center;">業務時間</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% for item in @items %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td style="text-align: center;"><%= safe{item.target_date_label("%Y-%m-%d", true)} %></td>
    <td style="text-align: center;"><%= safe{"#{item.business_hours_start_time.strftime("%H:%M")} ～ #{item.business_hours_end_time.strftime("%H:%M")}"} %></td>
    <td style="text-align: center;"><%= safe{item.updated_at.strftime("%Y-%m-%d %H:%M")} %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
