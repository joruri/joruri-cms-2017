<h2><%= menu_header @content.name, @place.title, BizCalendar::ExceptionHoliday.model_name.human %></h2>

<div class="actionMenu">
<%= action_menu :new if Core.user.has_auth?(:designer) && Core.user.has_priv?(:create, item: Core.concept) %>
<%= action_menu :index %>
<%= action_menu :show %>
<%= action_menu :edit if @item && @item.editable? %>
<%= action_menu :destroy if @item && @item.deletable? %>

<% if params[:action] == 'index' %>
<span class="separator"></span>
<%= link_to '休業日一覧', biz_calendar_place_holidays_path(content: @content.id, place_id: @place.id) %>
<%= link_to '例外休業日一覧', biz_calendar_place_exception_holidays_path(content: @content.id, place_id: @place.id), class: 'current' %>
<% end %>
</div>
