<%= page_entries_info @items -%>

<table class="index">

  <tr>
    <th class="action_link">詳細</th>
    <th style="width: ; text-align: center;">拠点名</th>
    <th style="width: 120px; text-align: center;">業務時間</th>
    <th style="width: 120px; text-align: center;">休業日</th>
    <th style="width: 60px; text-align: center;">並び順</th>
    <th style="width: 120px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td style="text-align: center;"><%= item.title %></td>
    <td style="text-align: center;"><%= link_to '業務時間', biz_calendar_place_bussiness_hours_path(content: @content, place_id: item.id) %></td>
    <td style="text-align: center;"><%= link_to '休業日', biz_calendar_place_bussiness_holidays_path(content: @content, place_id: item.id) %></td>
    <td style="text-align: center;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%=l item.updated_at %></td>
    <td style="text-align: center;"><%= item.state_text %></td>
  </tr>
  <% end %>

</table>

<%= paginate @items %>
