<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.status.try(:name) %></td>
  </tr>
  <tr>
    <th><%= @category_type.title %>ID</th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th><%= @category_type.title %>名</th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :description %></th>
    <td><%= @item.description %></td>
  </tr>
  <tr>
    <th><%= @item.locale(:sitemap_state) %></th>
    <td><%= @item.sitemap_state_text %></td>
  </tr>
  <tr>
    <th><%= @item.locale(:docs_order) %></th>
    <td><%= @item.class::DOCS_ORDER_OPTIONS.detect{|o| o.last == @item.docs_order }.try(:first) %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :sort_no %></th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>

<p class="form">ページ設定</p>

<table class="show">
  <%= concept_view @item, :container => :tr %>
  <%= layout_view @item, :container => :tr %>
  <tr>
    <th><%= @item.class.human_attribute_name :template_id %></th>
    <td><%= @item.template.try(:title) %></td>
  </tr>
</table>

<%= creator_view @item %>
