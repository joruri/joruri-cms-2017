<span class="note">※は必須項目です。</span>

<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.collection_radio_buttons :state, @item.class.state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :name %> <span class="note">※</span></th>
    <td><%= f.text_field :name, class: 'id' %></td>
  </tr>
  <tr>
    <th><%= f.label :title %> <span class="note">※</span></th>
    <td><%= f.text_field :title, class: 'name' %></td>
  </tr>
  <tr>
    <th><%= f.label :description %></th>
    <td><%= f.text_field :description, size: 100 %></td>
  </tr>
  <tr>
    <th><%= f.label :sitemap_state %></th>
    <td><%= f.collection_radio_buttons :sitemap_state, @item.class.sitemap_state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :docs_order %></th>
    <td><%= f.select :docs_order, @item.class.docs_order_options %></td>
  </tr>
  <tr>
    <th><%= f.label :sort_no %></th>
    <td><%= f.text_field :sort_no, class: 'number' %></td>
  </tr>
</table>

<br />

<p class="form">ページ設定</p>

<table class="show">
  <%= concept_and_layout_form f %>
  <tr>
    <th><%= f.label :template_id %></th>
    <td><%= f.collection_select :template_id, @content.templates, :id, :title, include_blank: true %></td>
  </tr>
  <tr>
    <th><%= f.label :internal_category_type_id %></th>
    <td><%= f.collection_select :internal_category_type_id,
                                @content.category_types.where(@content.category_types.table[:id].not_eq(@item.id)),
                                :id, :title, include_blank: true %></td>
  </tr>
</table>

<%= creator_form f %>
