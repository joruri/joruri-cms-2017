<%= page_entries_info @items -%>

<table class="index">
  <tr>
    <th class="action_link">詳細</th>
    <th><%= GpCategory::TemplateModule.human_attribute_name :name %></th>
    <th><%= GpCategory::TemplateModule.human_attribute_name :title %></th>
    <th style="text-align: center; width: 150px;"><%= GpCategory::TemplateModule.human_attribute_name :updated_at %></th>
  </tr>

  <%- @items.each do |item| -%>
  <tr class="<%= cycle '', 'cycle' %>">
    <td class="action_link"><%= link_to :show, { action: :show, id: item } %></td>
    <td><%= item.name %></td>
    <td><%= item.title %></td>
    <td style="text-align: center;"><%=l item.updated_at %></td>
  </tr>
  <%- end -%>
</table>

<%= paginate @items -%>
