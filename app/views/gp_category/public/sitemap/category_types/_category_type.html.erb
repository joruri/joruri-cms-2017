<%- css_class += [File.basename(category_type.name, '.*').camelize(:lower)] -%>
<li class="level<%= level %> <%= css_class.join('-') %>">
  <%= link_to category_type.title, category_type.public_uri, class: "level#{level}" %>

  <%- if (categories = category_type.public_root_categories.visible_in_sitemap).present? -%>
  <ul class="level<%= level + 1 %> <%= css_class.join('-') %>">
    <%= render partial: 'gp_category/public/sitemap/category_types/category',
               collection: categories, locals: { level: level + 1, css_class: css_class } %>
  </ul>
  <%- end -%>
</li>
