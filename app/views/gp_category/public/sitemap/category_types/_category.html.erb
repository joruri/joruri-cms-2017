<%- css_class += [File.basename(category.name, '.*').camelize(:lower)] -%>
<li class="level<%= level %> <%= css_class.join('-') %>">
  <%= link_to category.title, category.public_uri, class: "level#{level}" %>

  <%- if (children = category.public_children.visible_in_sitemap).present? -%>
  <ul class="level<%= level + 1 %> <%= css_class.join('-') %>">
    <%= render partial: 'gp_category/public/sitemap/category_types/category',
               collection: children, locals: { level: level + 1, css_class: css_class } %>
  </ul>
  <%- end -%>
</li>
