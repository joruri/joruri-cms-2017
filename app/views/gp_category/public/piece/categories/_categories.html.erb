<%- categories.each do |category| -%>
<ul class="level<%= category.level_no + 1 -%>">
  <%- category.public_children.each do |child| -%>
  <li class="<%= child.name -%>">
    <%= link_to child.title, child.public_uri %><%= "(#{@doc_count[child.id].to_i})" if @piece.num_docs_visible? %>
    <%- unless child.public_children.empty? -%>
    <%= render 'categories', categories: category.public_children %>
    <%- end -%>
  </li>
  <%- end -%>
</ul>
<%- end -%>
