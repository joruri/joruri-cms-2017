<%= render 'search' %>

<%= page_entries_info @items -%>

<table class="index">

  <tr>
    <th style="width: 60px; text-align: center;">詳細</th>
    <th style="width: 120px; text-align: center;">エントリ一覧</th>
    <th style="width: ;">フィードID</th>
    <th style="width: ;">フィード名</th>
    <th style="width: 150px; text-align: center;">更新日時</th>
    <th style="width: 60px; text-align: center;">状態</th>
  </tr>

  <% for item in @items %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, url_for(:action => :show, :id => item) %></td>
    <td style="text-align: center;"><%= link_to "エントリ一覧", feed_feed_entries_path(@content.id, item.id) %></td>
    <td><%= item.name %></td>
    <td><%= item.title %></td>
    <td style="text-align: center;"><%=i18n_l item.updated_at %></td>
    <td style="text-align: center;"><%= item.status.try(:name) %></td>
  <% end %>

</table>

<%= paginate @items %>