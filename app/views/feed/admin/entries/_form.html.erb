<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.collection_radio_buttons :state, @item.class.state_options, :last, :first %></td>
  </tr><tr>
    <th><%= f.label :id %></th>
    <td><%= @item.id %></td>
  </tr>
  <% if uri = @item.link_alternate %>
  <tr>
    <th><%= f.label :link_alternate %></th>
    <td><div><%= link_to uri, uri, target: '_blank' %></div></td>
  </tr>
  <% end %>
  <tr>
    <th><%= f.label :title %></th>
    <td><%= @item.title %></td>
  </tr><tr>
    <th>分類</th>
    <td><%=hbr @item.categories %></td>
  </tr>
  <% if uri = @item.image_uri %>
  <tr>
    <th><%= f.label :image_uri %></th>
    <td><div><%= link_to uri, uri, target: '_blank' %></div></td>
  </tr>
  <% end %>
  <tr>
    <th>概要</th>
    <td><%=hbr @item.summary %>
    </td>
  </tr>
</table>
