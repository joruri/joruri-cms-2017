<%= page_entries_info @items -%>

<table class="index">
  <tr>
    <th style="text-align: center; width: 60px;">詳細</th>
    <th style="text-align: center; width: 120px;"><%= GpTemplate::Item.human_attribute_name :name %></th>
    <th><%= GpTemplate::Item.human_attribute_name :title %></th>
    <th style="text-align: center; width: 220px;"><%= GpTemplate::Item.human_attribute_name :item_type %></th>
    <th style="text-align: center; width: 80px;"><%= GpTemplate::Item.human_attribute_name :sort_no %></th>
    <th style="text-align: center; width: 150px;"><%= GpTemplate::Item.human_attribute_name :created_at %></th>
    <th style="text-align: center; width: 80px;"><%= GpTemplate::Item.human_attribute_name :state %></th>
  </tr>
  <%- @items.each do |item| -%>
  <tr class="<%= cycle '', 'cycle' %>">
    <td style="text-align: center;"><%= link_to :show, gp_template_template_item_path(content: @content, template_id: @template.id, id: item.id) %></td>
    <td style="text-align: left;"><%= item.name %></td>
    <td style="text-align: left;"><%= item.title %></td>
    <td style="text-align: left;"><%= item.item_type_label %></td>
    <td style="text-align: right;"><%= item.sort_no %></td>
    <td style="text-align: center;"><%=l item.created_at %></td>
    <td style="text-align: center;"><%= item.status.name %></td>
  </tr>
  <%- end -%>
</table>

<%= paginate @items -%>
