<%- return '' unless defined?(template) && defined?(template_values) -%>

<%- template.items.public_state.each do |item|
  next if item.item_type == 'attachment_file_list' -%>
  <%- if item.item_type == 'rich_text' -%>
  <table class="show">
    <tr>
      <th><%= item.title %></th>
    </tr>
    <tr>
      <td class="cke_editor_wrapper">
        <%= text_area_tag "template_values[#{item.name}]", replace_file_path(template_values[item.name], base: file_uri), class: 'ckeditor' %>
      </td>
    </tr>
  </table>
  <%- else -%>
  <table class="show">
    <tr>
      <th><%= item.title %></th>
      <td><%=simple_format template_values[item.name] %></td>
    </tr>
  </table>
  <%- end -%>
<%- end -%>
