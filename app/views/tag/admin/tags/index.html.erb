<%= page_entries_info @items -%>

<table class="index">
  <tr>
    <th><%= Tag::Tag.human_attribute_name :word %></th>
    <th style="text-align: center; width: 120px;"><%= Tag::Tag.human_attribute_name :last_tagged_at %></th>
  </tr>

  <% @items.each do |item| %>
  <tr class="<%= cycle '', 'cycle' %>">
    <td><%= item.word %></td>
    <td style="text-align: center;"><%=l item.last_tagged_at %></td>
  </tr>
  <% end %>
</table>

<%= paginate @items %>
