<%= render 'shared/admin/piece/show' do -%>
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :group_id %></th>
    <td><%= @item.groups.find_by(id: @item.setting_value(:group_id)).try(:title) %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :sort %></th>
    <td><%= @item.sort_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :impl %></th>
    <td><%= @item.impl_text %></td>
  </tr>
</table>

<p class="form">挿入テキスト</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :upper_text %></th>
  </tr>
  <tr>
    <td><%= @item.setting_value(:upper_text) %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :lower_text %></th>
  </tr>
  <tr>
    <td><%= @item.setting_value(:lower_text) %></td>
  </tr>
</table>
<%- end -%>
