/var/www/joruri/log/*.log {
  compress
  daily
  dateext
  delaycompress
  missingok
  notifempty
  rotate 7

  lastaction
    pid=/var/www/joruri/tmp/pids/unicorn.pid
    test -s $pid && kill -USR1 "$(cat $pid)"
    pid=/var/www/joruri/tmp/pids/delayed_job*.pid
    ls $pid >/dev/null 2>&1 && cat $pid | xargs kill -USR1
  endscript
  }
